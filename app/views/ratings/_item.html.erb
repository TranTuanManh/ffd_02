<% rating_counter = product.rating_counter %>
<% total_rating = rating_counter.count %>
<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="row">
      <div class="col-xs-12 col-md-4 text-center">
        <h3 class="rating-num"><%= product.average_rating %></h3>
        <div><%= total_rating %> total</div>
      </div>
      <div class="col-xs-12 col-md-8">
        <div class="row rating-desc">
          <% (1..5).each do |n| %>
          <% e = rating_counter[Float n]==nil ? 0 : rating_counter[Float n] %>
          <div class="col-xs-3 col-md-3 text-right"><%= n %> </div>
          <div class="col-xs-8 col-md-9">
            <div class="progress progress-striped">
              <div class="progress-bar progress-bar-warning"
                role="progressbar" aria-valuenow="20"
                aria-valuemin="0" aria-valuemax="100"
                style="width: <%=  rating_counter.count==0?0: 100*e/2 %>%">
                <span><%= e %></span>
              </div>
            </div>
          </div>
          <% end %>
          <div class="col-xs-3 col-md-3 text-right">
            <% rating = product.rating_by current_user %>
            <span>
              Bạn đã cho <b id="rating-value">
                <%= rating %></b> sản phẩm này!
            </span>
          </div>
          <div class="col-xs-8 col-md-9">
            <span>Xếp hạng tại đây!</span>
            <div class="progress" onclick="$(this).rating(<%= product.id %>)">
              <div class="progress-bar progress-bar-warning"
                id="my-rating" role="progressbar" aria-valuenow="10"
                aria-valuemin="0" aria-valuemax="100"
                style="width:<%= 20*rating %>%;">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
