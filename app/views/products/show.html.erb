<div class="container">
  <div class="row">
    <div class="col-md-12">
        <div class="col-md-4">
        <div class="product-avatar ">
          <%= image_tag "http://lorempixel.com/290/290/", class: "img-thumbnail" %>
        </div>
        <div class="product-name"></div>
        </div>
        <div class="col-md-8">
          <dl>
            <dt>
              <h2><b><%= @product.name %></b></h2>
            </dt>
            <dd>
              <%= @product.description %>
            </dd>
            <dt>
              <h3><b><%= t "giaban" %></b></h3>
            </dt>
            <dd>
              <h3><%= @product.price %> VND</h3>
            </dd>
            <dt>
            <h3><b><%= t "danhgia" %></b></h3>
            </dt>
            <dd><%= render "ratings/item", product: @product %></dd>
          </dl>
          <button type="button" class="btn btn-lg btn-primary">
            <%= t "themgiohang" %>
          </button>
          <button class="btn btn-lg btn-primary btn-order"
            data-product='<%= @product.to_json %>'>
              <%= t "dathang" %>
          </button>
          <div class="row" style="margin-top: 10px;">
            <div class="col-md-12 well">
              <div class="comment-list">
                <% @comments = @product.comments %>
                  <h3 class="comment-count">
                    <%= t "binhluan" %>(<%= @comments.count %>)
                  </h3>
                  <% @comments.each do |comment| %>
                  <%= render "comments/item", comment: comment %>
                <% end %>
              </div>
              <div class="comment-area">
                <%= form_for current_user.comments.build, remote: true,
                  url: comments_path do |f| %>
                  <div class="form-group">
                    <%= f.hidden_field :product_id, value: @product.id %>
                    <%= f.label :content %>
                    <%= f.text_area :content, class: "form-control content-area", rows: 5,
                      placeholder: t("nhapbinhluan") %>
                  </div>
                  <div class="form-group">
                    <%= f.submit t("dangbinhluan"), class: "btn btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
<%= render "orders/order_modal" %>
</div>
<%= render "layouts/footer" %>
